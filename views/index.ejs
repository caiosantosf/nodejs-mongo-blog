      <section>
      <div class="container-fluid pb-4">
        <div class="row mt-1">
          <div class="col-lg-6">
              <div class="container-fluid p-0 text-center">
                <div class="container-fluid text-center pb-1"><h3 class="font-menu text-red">Agenda</h3></div> 
                <div class="agenda">
                  <table class="table table-condensed">
                    <thead class="bg-orange">
                      <tr>
                        <th>Data</th>
                        <th>Evento</th>
                      </tr>
                    </thead>
                    <tbody class="">
                      <% events.forEach(function(event) { %>
                      <tr>
                        <td nowrap class="agenda-date">
                          <div class="dayofmonth text-red"></div>
                          <div class="dayofweek text-muted"></div>
                          <div class="shortdate"></div>
                          <div class="agenda-time"></div>
                        </td>
                        <td class="agenda-events">
                          <div class="agenda-event">
                            <a target="_blank" href="<%= event.link %>" class="text-purple event-name"><%= event.title %>
                              <i class="fa fa-facebook-square event-fb" aria-hidden="true"></i>
                            </a>  
                          </div>
                          <div class="">Local: <%= event.place %></div>
                        </td>
                      </tr>
                      <div class="d-none" id="hiddendate"><%= event.date %></div>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
                <span class="text-purple event-name d-none">Não há eventos programados.</span>
              </div>
          </div>

          <div class="col-lg-6">
            <div class="container-fluid text-center pb-4">
              <h3 class="text-center text-red mb-2 font-menu">Álbum de Fotos</h3>
              <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
