    <header>
      <% include partials/header %>
    </header>

    <main>
      <div class="container pt-4">
        <div class="row">
          <div class="col-md-12 mb-2">
            <div class="row">
              <div class="col-md-8">
                  <ul class="pgwSlider">
                    <%var i = 1; blogs.forEach(function(post) { %>
                    <% if (i == 1 || i == 2) { %>
                    <li>
                      <a href="/blog/<%= post.titlePath %>">
                        <img src=".<%= post.cover %>">
                        <span><%= post.title %></span>
                      </a>
                    </li>
                    <% } %>
                    <% i++;}); %>
                  </ul>
              </div>
              <div class="col-md-4 pl-1">
              <%var i = 1; blogs.forEach(function(post) { %>
                <% if (i == 3) { %>
                  <a href="/blog/<%= post.titlePath %>">
                    <div class="card bg-light">
                      <img class="card-img-top center-cropped" src=".<%= post.cover %>">
                      <div class="card-body subtitle-news">
                        <h5 class="card-title news-size text-purple article-link"><%= post.title %></h5>
                        <p class="card-text"><%= post.subtitle %></p>
                      </div>
                    </div>
                  </a>
                <% } %>
                <% i++;}); %>
              </div>
              <div class="container m-news"> 
                <div class="row">
                    <%var i = 1; blogs.forEach(function(post) { %>
                    <% if (i == 4 || i == 5 || i == 6) { %>
                    <div class="col-md-4 p-2">
                      <a href="/blog/<%= post.titlePath %>">
                        <div class="card bg-light">
                          <img class="card-img-top center-cropped" src=".<%= post.cover %>">
                          <div class="card-body subtitle-news">
                            <h5 class="card-title news-size text-purple article-link"><%= post.title %></h5>
                            <p class="card-text"><%= post.subtitle %></p>
                          </div>
                        </div>
                      </a>
                    </div> 
                    <% } %>
                    <% i++;}); %>
                </div> 
              </div>
              <div class="container-fluid">
                <div class="text-center"><a class="mt-1 btn btn-outline-secondary btn-sm btn-block btn-more" href="/blog">Ver mais</a></div>
              </div>
            </div>      
          </div>     
        </div>
      </div>
    </main>

